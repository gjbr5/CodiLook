<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.codi.CodiActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:text="@string/app_name"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="36sp"
        android:textStyle="italic"
        android:typeface="serif" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        app:srcCompat="@android:drawable/ic_menu_more"
        android:contentDescription="@string/desc_menu_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/codi_img_btn_prev"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/ic_media_rew"
            android:contentDescription="@string/prev" />

        <ImageView
            android:id="@+id/codi_img_codi"
            android:layout_width="0dp"
            android:layout_height="382dp"
            android:layout_weight="2"
            android:contentDescription="@string/desc_codi"
            android:src="@drawable/picture5" />

        <ImageButton
            android:id="@+id/codi_img_btn_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/ic_media_ff"
            android:contentDescription="@string/next" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="30dp"
        android:text="@string/score" />

    <RatingBar
        android:id="@+id/codi_rating_codi_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:autofillHints="description"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/score"
        android:inputType="textMultiLine" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="bottom"
        android:text="@string/copyright" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodiActivity">

    <!--배경이 될 Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/ly_drawer_img_Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc_menu_bar"
            android:src="@drawable/menu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="36sp"
            android:textStyle="italic"
            android:typeface="serif" />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/codi_img_btn_prev"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/ic_media_rew"
            android:contentDescription="@string/prev" />

        <ImageView
            android:id="@+id/codi_img_codi"
            android:layout_width="0dp"
            android:layout_height="382dp"
            android:layout_weight="2"
            android:contentDescription="@string/desc_codi"
            android:src="@drawable/picture5" />

        <ImageButton
            android:id="@+id/codi_img_btn_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/ic_media_ff"
            android:contentDescription="@string/next" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="30dp"
        android:text="@string/score" />

    <RatingBar
        android:id="@+id/codi_rating_codi_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/ly_codi_img_GoHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:autofillHints="description"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/score"
        android:inputType="textMultiLine" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="bottom"
        android:text="@string/copyright" />
    </LinearLayout>

    <!--드로어 화면이 될 Layout-->
    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_gravity="start"
        android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/ly_drawer_img_CloseMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/menu_open"/>

        <TextView
            android:id="@+id/ly_drawer_tv_LoginModify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_drawer_img_CloseMenu"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="20dp"
            android:text="회원 정보 수정"
            android:textColor="#f70"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ly_drawer_tv_CodiRecommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_drawer_tv_LoginModify"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="20dp"
            android:text="코디 추천"
            android:textColor="#f70"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ly_drawer_tv_AppInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_drawer_tv_CodiRecommend"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="20dp"
            android:text="어플 정보"
            android:textColor="#f70"
            android:textSize="20dp" />

        <Button
            android:id="@+id/ly_drawer_btn_Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="로그아웃"
            android:textColor="#f70"
            android:textSize="20dp" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
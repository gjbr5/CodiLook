<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:text="CodiLook"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="36dp"
        android:textStyle="italic"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/menubar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_menu_more"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="  JOIN"
                android:textColor="#FF9800"
                android:textSize="24dp"
                android:textStyle="italic"
                android:typeface="serif" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="20dp"
                android:textStyle="italic"
                android:typeface="serif" />
            <EditText
                android:id="@+id/ET_id"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:textSize="12dp"
                android:inputType="textUri"/>
            <Button
                android:id="@+id/BT_login_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="31dp"
                android:text="중복확인"
                android:textSize="10dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="PW"
                android:textSize="20dp"
                android:textStyle="italic"
                android:typeface="serif" />
            <EditText
                android:id="@+id/ET_pw"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:textSize="12dp"
                android:inputType="textUri"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="PW 확인"
                android:textSize="15dp"
                android:textStyle="italic"
                android:typeface="serif" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/ET_pw_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="12dp"
                    android:inputType="textUri"/>
                <TextView
                    android:id="@+id/TV_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"/>
            </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView15"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:text="E-MAIL"
                android:textSize="15dp"
                android:textStyle="italic"
                android:typeface="serif" />
            <EditText
                android:id="@+id/ET_email"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="12dp"
                android:inputType="textUri"/>
            <Button
                android:id="@+id/BT_email_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="31dp"
                android:text="중복확인"
                android:textSize="10dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/TV_bloodType"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:text="혈액형"
                android:textSize="20dp"
                android:textStyle="italic"
                android:typeface="serif" />
            <Spinner
                android:id="@+id/SP_bloodType"
                android:entries="@array/혈액형"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView16"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:text="별자리"
                android:textSize="20dp"
                android:textStyle="italic"
                android:typeface="serif" />
            <Spinner
                android:id="@+id/SP_constellation"
                android:entries="@array/별자리"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="MBTI유형"
                android:textSize="15dp"
                android:textStyle="italic"
                android:typeface="serif" />
            <Spinner
                android:id="@+id/SP_mbti"
                android:entries="@array/mbti"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/BT_mbti_link"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="31dp"
                android:text="검사링크"
                android:textSize="10dp"/>
        </TableRow>

    </TableLayout>
    <Button
        android:id="@+id/BT_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="end"
        android:text="COMPLETE"
        android:textStyle="italic"
        android:typeface="serif" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:layout_marginBottom="10dp"
        android:text="@CodiLook" />

</LinearLayout>
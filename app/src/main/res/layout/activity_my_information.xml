<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".App_informationActivity">

    <!--배경이 될 Layout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ly_drawer_img_Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="31dp"
            android:text="내 정보"
            android:textColor="#FF9800"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            app:layout_constraintBottom_toTopOf="@+id/myinfo_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <TableRow
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:labelFor="@id/register_et_email"
                    android:text="@string/prompt_email"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/register_et_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:autofillHints="email"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:labelFor="@id/register_et_password"
                    android:text="@string/prompt_password"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/register_et_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:autofillHints="password"
                    android:inputType="textPassword"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:labelFor="@id/register_et_pw_confirm"
                    android:text="@string/prompt_password_confirm"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/register_et_pw_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:autofillHints="password"
                    android:inputType="textPassword"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:labelFor="@id/register_sp_blood_type"
                    android:text="@string/prompt_bloodtype"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:typeface="serif" />

                <Spinner
                    android:id="@+id/register_sp_blood_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:entries="@array/혈액형"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />

            </TableRow>

            <TableRow
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:labelFor="@id/register_sp_constellation"
                    android:text="@string/prompt_constellation"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:typeface="serif" />

                <Spinner
                    android:id="@+id/register_sp_constellation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:entries="@array/별자리"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />
            </TableRow>

            <TableRow
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:labelFor="@id/register_sp_mbti"
                    android:text="@string/prompt_mbti"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:typeface="serif" />

                <Spinner
                    android:id="@+id/register_sp_mbti"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:entries="@array/mbti"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />

                <Button
                    android:id="@+id/register_btn_mbti_link"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/link_mbti"
                    android:textSize="14sp" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/myinfo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="55dp"
            android:text="수정하기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:text="@string/copyright"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/myinfo_btn"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="311dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="37dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--드로어 화면이 될 Layout-->
    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_gravity="start"
        android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/ly_drawer_img_CloseMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/menu_open"/>

        <TextView
            android:id="@+id/ly_drawer_tv_LoginModify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_drawer_img_CloseMenu"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="20dp"
            android:text="회원 정보 수정"
            android:textColor="#f70"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ly_drawer_tv_CodiRecommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_drawer_tv_LoginModify"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="20dp"
            android:text="코디 추천"
            android:textColor="#f70"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ly_drawer_tv_AppInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_drawer_tv_CodiRecommend"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="20dp"
            android:text="어플 정보"
            android:textColor="#f70"
            android:textSize="20dp" />

        <Button
            android:id="@+id/ly_drawer_btn_Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="로그아웃"
            android:textColor="#f70"
            android:textSize="20dp" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
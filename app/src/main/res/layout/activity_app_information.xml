<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".App_informationActivity"
    tools:layout_editor_absoluteX="39dp"
    tools:layout_editor_absoluteY="0dp">

    <Button
        android:id="@+id/reference_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:text="참고 사이트"
        app:layout_constraintBaseline_toBaselineOf="@+id/update_list_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/now_version" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginStart="169dp"
        android:layout_marginEnd="2dp"
        android:gravity="bottom"
        android:text="@string/copyright"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/now_version"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/new_version"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="66dp"
        android:text="v 1.0.1 "
        android:textColor="#FF9800"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/new_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/new_"
        app:layout_constraintTop_toTopOf="@+id/new_" />

    <TextView
        android:id="@+id/now_"
        android:layout_width="105dp"
        android:layout_height="42dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="88dp"
        android:text="현재 버전"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/now_version"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/right" />

    <TextView
        android:id="@+id/new_"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="52dp"
        android:text="최신 버전"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/new_version"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/now_" />

    <TextView
        android:id="@+id/now_version"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="299dp"
        android:text="v 1.0.0 "
        android:textColor="#FF9800"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/appinfo_title" />

    <Button
        android:id="@+id/update_list_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="123dp"
        android:text="업데이트 내역"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/new_"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/appinfo_title"
        android:layout_width="399dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="166dp"
        app:layout_constraintBottom_toTopOf="@+id/now_version"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/title" />

    <TextView
        android:id="@+id/right"
        android:layout_width="238dp"
        android:layout_height="77dp"
        android:text="2020-2021.CodiLook Software Ltd."
        app:layout_constraintEnd_toEndOf="@+id/appinfo_title"
        app:layout_constraintStart_toStartOf="@+id/appinfo_title"
        app:layout_constraintTop_toBottomOf="@+id/appinfo_title" />

</androidx.constraintlayout.widget.ConstraintLayout>